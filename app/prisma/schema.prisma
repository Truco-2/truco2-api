generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String?       @unique
  name        String        @unique
  password    String?
  OwnedRooms  Room[]        @relation(name: "owned_rooms")
  UsersRooms  UsersRooms[]
  MatchsUsers MatchsUsers[]
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@map("users")
}

model Room {
  id         Int          @id @default(autoincrement())
  name       String
  status     Int          @default(1)
  code       String       @unique
  ownerId    Int          @map("owner_id")
  isPrivate  Boolean      @default(false) @map("is_private")
  maxPlayers Int          @default(2) @map("max_players")
  password   String?
  Owner      User         @relation("owned_rooms", fields: [ownerId], references: [id])
  UsersRooms UsersRooms[]
  Matchs     Match[]      @relation(name: "matchs")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")

  @@map("rooms")
}

model UsersRooms {
  User       User     @relation(fields: [userId], references: [id])
  userId     Int      @map("user_id")
  Room       Room     @relation(fields: [roomId], references: [id])
  roomId     Int      @map("room_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  @@id([userId, roomId])
  @@map("users_rooms")
}

model Match {
  id          Int           @id @default(autoincrement())
  status      Int           @default(1)
  duration    DateTime?
  roomId      Int           @map("room_id")
  Room        Room          @relation("matchs", fields: [roomId], references: [id])
  MatchsUsers MatchsUsers[]
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@map("matchs")
}

model MatchsUsers {
  User       User     @relation(fields: [userId], references: [id])
  userId     Int      @map("user_id")
  Match      Match    @relation(fields: [matchId], references: [id])
  matchId    Int      @map("match_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  @@id([userId, matchId])
  @@map("users_matchs")
}
